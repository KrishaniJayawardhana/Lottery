<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otpConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C60A7"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/img"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginBottom="250dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <RelativeLayout
        android:id="@+id/relativeMain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/img"
        >



    <RelativeLayout
        android:id="@+id/btnRelative2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal" >


    <TextView
        android:id="@+id/lotNum"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="XX XX XX XX"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginStart="50dp"
        android:padding="10dp"
        />
        

    </RelativeLayout>

    </RelativeLayout>



        <Button
            android:id="@+id/gallary"
            android:layout_width="300dp"

            android:layout_height="50dp"
            android:padding = "10dp"
            android:text="Select Number"
            android:layout_marginBottom="150dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorBrown"
            tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="90dp"
        android:text="Check Result"
        android:textColor="@color/colorBrown"
        android:elevation="24dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
      />

    <Button
        android:id="@+id/speakBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="25dp"
        android:textColor="@color/colorBrown"
        android:text="Speak Result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
